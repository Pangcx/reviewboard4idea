<idea-plugin version="2">
    <id>reviewboard4idea</id>
    <name>Reviewboard for Idea</name>
    <version>1.0</version>
    <vendor>YourCompany</vendor>
    <description><![CDATA[
      Diff based Reviewboard plugin.
      ]]>
    </description>

    <change-notes><![CDATA[
      Finally it works.
      ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="107.105"/>
    <depends>Subversion</depends>
    <project-components>
        <component>
            <implementation-class>com.plugin.reviewboard.ReviewBoardConfig</implementation-class>
        </component>
    </project-components>

    <actions>
        <action id="PostReview" class="com.plugin.reviewboard.PostReviewAction" text="PostReview"
                description="Post Review">
            <add-to-group group-id="ChangesViewPopupMenu" anchor="last" relative-to-action=""/>
        </action>
    </actions>
</idea-plugin>